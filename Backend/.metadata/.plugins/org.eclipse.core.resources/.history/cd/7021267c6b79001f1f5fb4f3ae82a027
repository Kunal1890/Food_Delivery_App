package com.model;
import java.util.ArrayList;
import java.util.List;

public class Menu {
    private Long restaurantId;
    private String name;
    private String description;
    private Double price;
    private String category;
    private Integer quantity;

    // Constructors, Getters, Setters

    public Menu(Long restaurantId, String name, String description, Double price, String category, Integer quantity) {
        this.restaurantId = restaurantId;
        this.name = name;
        this.description = description;
        this.price = price;
        this.category = category;
        this.quantity = quantity;
    }

    // Dummy menu items for testing
    public static List<Menu> getDummyMenu() {
        List<Menu> menuItems = new ArrayList<>();
        menuItems.add(new Menu(1L, "Burger", "Beef burger", 8.99, "Fast Food", 10));
        menuItems.add(new Menu(2L, "Pizza", "Cheese pizza", 12.99, "Fast Food", 15));
        return menuItems;
    }


	public Long getRestaurantId() {
		return restaurantId;
	}

	public void setRestaurantId(Long restaurantId) {
		this.restaurantId = restaurantId;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getDescription() {
		return description;
	}

	public void setDescription(String description) {
		this.description = description;
	}

	public Double getPrice() {
		return price;
	}

	public void setPrice(Double price) {
		this.price = price;
	}

	public String getCategory() {
		return category;
	}

	public void setCategory(String category) {
		this.category = category;
	}

	public Integer getQuantity() {
		return quantity;
	}

	public void setQuantity(Integer quantity) {
		this.quantity = quantity;
	}

	public Menu() {
		super();
		// TODO Auto-generated constructor stub
	}
    
    
}
